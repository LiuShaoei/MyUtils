<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RoundImageView">
        <!-- 描边宽度-->
        <attr name="border_width" format="dimension" />
        <!-- 描边颜色-->
        <attr name="border_color" format="color" />
        <!--圆角大小-->
        <attr name="corner_radius" format="dimension" />
        <!--左上圆角大小-->
        <attr name="leftTop_corner_radius" format="dimension" />
        <!--右上圆角大小-->
        <attr name="rightTop_corner_radius" format="dimension" />
        <!--左下圆角大小-->
        <attr name="leftBottom_corner_radius" format="dimension" />
        <!--右下圆角大小-->
        <attr name="rightBottom_corner_radius" format="dimension" />
        <!--图片类型：圆角或者圆形-->
        <attr name="type" format="enum">
            <enum name="oval" value="2" />
            <enum name="round" value="1" />
            <enum name="circle" value="0" />
        </attr>
    </declare-styleable>
    <declare-styleable name="Header">
        <attr name="title_center_text_size" format="dimension" />
        <attr name="title_center_text_color" format="color" />
        <attr name="title_center_text" format="string" />
        <attr name="title_left_img" format="reference" />
        <attr name="title_background_color" format="color" />
        <attr name="title_right_img" format="reference" />
        <attr name="title_right_text" format="string" />
        <attr name="title_right_text_color" format="color" />
        <attr name="title_right_text_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="Gesture">
        <attr name="gesture_dot_size" format="integer" />
        <attr name="gesture_margin" format="dimension" />
        <attr name="gesture_normal_color" format="color" />
        <attr name="gesture_wrong_color" format="color" />
        <attr name="gesture_point_selected" format="reference" />
        <attr name="gesture_point_wrong" format="reference" />
        <attr name="gesture_point_normal" format="reference" />
    </declare-styleable>
</resources>
